<h1>{{title}}</h1>
<p>Welcome to {{title}}</p>
<div class="container">
        <form class="form-signin" action="/signup" method="post">
            <h2 class="form-signin-heading text-center">Signup</h2>

            <label for="username" class="sr-only">Username</label>
            <input type="text" id="username" name="username" class="form-control" placeholder="Username" required autofocus>

            <label for="firstname" class="sr-only">Firstname</label>
            <input type="text" id="firstname" name="firstname" class="form-control" placeholder="Firstname" autofocus>

            <label for="lastname" class="sr-only">Lastname</label>
            <input type="text" id="lastname" name="lastname" class="form-control" placeholder="Lastname" autofocus>

            <label for="email" class="sr-only">E-mail</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="E-mail" required>

            <label for="phone" class="sr-only">Phone</label>
            <input type="tel" id="phone" name="phone" class="form-control" placeholder="Phone (i. e. +49 30 123456)" required>

            <label for="password" class="sr-only">Password</label>
            <input type="password" name="password" id="password" class="form-control" placeholder="Password" required>

            <button class="btn btn-lg btn-primary btn-block" type="submit">Signup</button>
          </form>

          <div class="row">
            <div class="center-block text-center">
                <a href="/oauth/facebook">Login with Facebook</a> |
                <a href="/oauth/twitter">Login with Twitter</a>
            </div>
        </div>
    </div>
